# =============================================================================
# OnBoardingRite - Unified Environment Configuration
# =============================================================================
# This single file configures BOTH backend and frontend.
# Copy this to `.env` and fill in your values.
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=OnBoarding App
DEBUG=False

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_HOST=YOUR_DATABASE_HOST
POSTGRES_PORT=5432
POSTGRES_DB=YOUR_DATABASE_NAME
POSTGRES_USER=YOUR_DATABASE_USER
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET=YOUR_SECURE_RANDOM_STRING

# -----------------------------------------------------------------------------
# URLs (Only change if not using defaults)
# -----------------------------------------------------------------------------
# Backend API URL (default: http://localhost:9000/api/v1)
# Set this if backend runs on a different domain
BACKEND_URL=http://localhost:9000/api/v1

# Frontend URL for CORS (default: http://localhost:9009)
# Add your production domain if deploying to a custom domain
FRONTEND_URL=http://localhost:9009
